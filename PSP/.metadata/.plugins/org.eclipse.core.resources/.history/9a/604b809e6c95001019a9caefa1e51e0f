package ejercicio2;

import java.io.IOException;

public class EjercicioProcessBuilderPing {
	public static void main(String[] args) throws IOException, InterruptedException {
		String resultado = String.format("%s %s.%s.%s.%s", args[0],args[1],args[2],args[3],args[4]);
		ProcessBuilder pb = new ProcessBuilder(args[0]);
		Process p1 = pb.start();
		if (p1.exitValue() == 0) {
			System.out.println("El ping ha sido exitoso");
		} else {
			System.out.printf("El ping NO ha sido exitoso, %s",args[0]);
		}

	}
}
